/* component/popLogin.wxss */
.background {
    z-index: 10;
    position: fixed;
    width: 100%;
    height: 100%;  
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.5);
    top: 0rpx;
    left: 0rpx;
}
.login {
  width: 80%;
  margin: 300rpx auto;
   background-color: #fff; 
  height:520rpx;
  padding: 0 40rpx;
  position: relative;
}
.title {
  text-align: center;
  font-size: 36rpx;
  color: #666;
  padding-top: 40rpx;
  font-weight: bold;
}
.close {
 width:38rpx;
height:38rpx;
position:absolute;
right:50rpx;
top:49rpx;

}
input {
  line-height: 120rpx;
  color: #999;
  height: 120rpx;
  border-bottom: 1px solid #eee;
}
.msg {
  height: 120rpx;
}
.identify {
  width: 65%;
  float: left;
  height: 120rpx;
}
.getIdentify {
  width: 35%;
  float: right;
  height: 120rpx;
  line-height: 120rpx;
  color: #00b7ee;
  text-align: right;
}
.loginBtn {
  width: 100%;
  margin-top:40rpx;
  color: #fff;
  background-color: #00b7ee;
  border-radius: 10rpx;
  height: 90rpx;
}